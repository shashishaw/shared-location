
<div class="login-form">
   <%= form_for(resource, as: resource_name, url: session_path(resource_name), :class=>"form-horizontal") do |f| %>
        <h2 class="text-center">Log in</h2>       
        <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>
        </div>
        <div class="form-group">
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control" %>
        </div>
        <div class="form-group">
            <%= f.submit "Log in" , class: "form-control btn btn-primary" %>
        </div>
        <% if devise_mapping.rememberable? %>
        <div class="clearfix">
            <label class="pull-left checkbox-inline"><%= f.check_box :remember_me%> Remember me</label>
            <a href="/users/password/new" class="pull-right">Forgot Password?</a>
        </div>
        <% end %>    
  <% end %>
    <p class="text-center"><a href="/users/sign_up">Create an Account</a></p>
</div> 
